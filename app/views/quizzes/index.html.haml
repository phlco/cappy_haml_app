%h1 Sorting Quiz

%div#quiz
  %input{name: 'numbers'}
  %button sort

:javascript
    $( document ).ready(function() {
      $('button').on("click", sortQuiz);
      $('button').on("click",clearQuiz);
    });

    function sortQuiz(){
      var numbers = $('input').val()
      var numberArray = numbers.split(",");
      for(var i=0; i<numberArray.length; i++){
        numberArray[i] = Number(numberArray[i]);
      };

      numberArray = numberArray.sort(function(a,b){return a > b});
      numberArray = numberArray.join(", ")
      var display = $('<div>').appendTo($('body'));
      display.text(numberArray);
    }

    function clearQuiz() {
      $('#quiz').remove();
    }